meta {
  name: PT Referential Ambiguity
  type: http
  seq: 6
}

post {
  url: {{llmCallerUrl}}/analyze_referential_ambiguity
  body: json
  auth: bearer
}

headers {
  Content-Type: application/json
}

auth:bearer {
  token: {{vllmApiKey}}
}

body:json {
  {
    "text": "Estou olhando pela janela. Meu amigo é uma pessoa má. Aquelas pessoas com quem ele anda são uma má influência. Eles apenas o arrastam para baixo. A mãe dele é muito legal. Todo mundo sabe como eles são. Você não pode confiar em pessoas assim. Pessoas como eles simplesmente não seguem o protocolo."
  }
}

tests {
  test("Status should be 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  const expectedPhrases = ["Aquelas pessoas", "Eles", "pessoas assim", "Pessoas como eles"];
  
  expectedPhrases.forEach(phrase => {
    test(`Phrase '${phrase}' should be detected`, function () {
      const found = res.body.some(item => item.detected_phrase.includes(phrase));
      expect(found).to.be.true;
    });
  });
  
  test("No unexpected phrases should be returned", function () {
    const actualPhrases = res.body.map(item => item.detected_phrase);
    const unexpectedPhrases = actualPhrases.filter(p => !expectedPhrases.some(ep => p.includes(ep)));
    console.log("Unexpected phrases: ", unexpectedPhrases);
    expect(unexpectedPhrases).to.be.empty;
  });
  
  console.log('Body:', res.body);
}

settings {
  encodeUrl: false
}
